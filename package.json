{
  "name": "kitsy",
  "version": "1.0.1",
  "description": "Monkey-patching toolkit to make it easier and cleaner to run code before and after functions or to inject new code into script tags",
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "repository": "https://github.com/seleb/kitsy",
  "license": "WTFPL",
  "keywords": [
    "kitsy",
    "hack",
    "hacking",
    "monkey-patch",
    "monkey-patching"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:doc": "typedoc src/ --out docs",
    "test": "run-s test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "postversion": "rm -rf dist && rm -rf docs && npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "typedoc": "^0.20.36",
    "typescript": "^4.3.2"
  },
  "files": [
    "dist/main",
    "dist/module"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/**/*",
            "docs/**/*",
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ]
  },
  "prettier": {
    "useTabs": true,
    "singleQuote": true,
    "printWidth": 160
  }
}
